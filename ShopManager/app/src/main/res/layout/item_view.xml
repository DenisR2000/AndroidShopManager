<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_prise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="73dp"
        android:background="@color/red"
        android:padding="@dimen/padding"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="50" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_prise"
        android:layout_alignBottom="@+id/item_prise"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:textColor="@android:color/white"
        tools:text="sail_item" />

    <TextView
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_name"
        android:layout_alignBottom="@+id/item_name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/item_name"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:textColor="@android:color/white"
        tools:text="sail_item" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@android:drawable/btn_dialog" />

</RelativeLayout>